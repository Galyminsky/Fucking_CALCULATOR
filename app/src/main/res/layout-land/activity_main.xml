<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_2_night"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/text"
        style="@style/DaysLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space_land"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/one"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/one_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="345dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/two"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/two_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="345dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/three"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/three_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="365dp"
            tools:layout_editor_absoluteY="345dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/four"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/four_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="300dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/plus"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/plus_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="455dp"
            tools:layout_editor_absoluteY="255dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/five"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/five_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="300dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/six"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/six_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="365dp"
            tools:layout_editor_absoluteY="300dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seven"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/seven_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="185dp"
            tools:layout_editor_absoluteY="255dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/eight"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/eight_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="255dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/minus"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/minus_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="455dp"
            tools:layout_editor_absoluteY="300dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/nine"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/nine_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="365dp"
            tools:layout_editor_absoluteY="255dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/zero_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="455dp"
            tools:layout_editor_absoluteY="345dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/equals"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/equals_land"
            android:textColor="@color/red"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="545dp"
            tools:layout_editor_absoluteY="345dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/multiply"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/multiply_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="545dp"
            tools:layout_editor_absoluteY="255dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/division"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/devision_land"
            app:cornerRadius="15dp"
            tools:layout_editor_absoluteX="545dp"
            tools:layout_editor_absoluteY="300dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset"
            style="@style/DaysLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:layout_gravity="fill"
            android:layout_margin="2dp"
            android:text="@string/reset_land"
            android:textColor="@color/red"
            app:cornerRadius="15dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
